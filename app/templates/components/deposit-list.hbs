<table class="crud-table deposits-table" cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th>Date</th>
      <th class="not-mobile">Last Meeting</th>
      <th class="not-mobile">Cash</th>
      <th class="not-mobile">Cheques</th>
      <th>Total</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {{#each sortedList as |deposit|}}
      <tr>
        <td>{{deposit.date}}</td>
        <td class="not-mobile">{{deposit.forLastMeeting}}</td>
        <td class="money not-mobile">{{money deposit.cash}}</td>
        <td class="money not-mobile">{{money deposit.cheques}}</td>
        <td class="money">{{money deposit.total}}</td>
        <td class="actions">
          <button class="view mobile-only" {{action "view" deposit}}>View</button>
          <button class="delete" {{action "remove" deposit}}>Delete</button>
        </td>
      </tr>
    {{/each}}
</tbody>
</table>

{{#if viewItem}}
  {{#modal-dialog hasOverlay=true translucentOverlay=true onClickOverlay=(action toggleProperty "viewItem")}}
    {{deposit-form model=viewItem class="popup-content" title="Deposit Details"}}
  {{/modal-dialog}}
{{/if}}
