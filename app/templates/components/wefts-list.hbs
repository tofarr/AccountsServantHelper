<table class="wefts-table" cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th>Date</th>
      <th class="not-mobile">Last Meeting</th>
      <th class="not-mobile">TransferId</th>
      <th class="not-mobile">KHAHC</th>
      <th class="not-mobile">GAA</th>
      <th class="not-mobile">COAA</th>
      <th class="not-mobile">CT</th>
      <th class="not-mobile">Worldwide</th>
      <th>Total</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {{#each sortedList as |wefts|}}
      <tr>
        <td>{{wefts.date}}</td>
        <td class="not-mobile">{{wefts.forLastMeeting}}</td>
        <td class="not-mobile">{{wefts.transferId}}</td>
        <td class="not-mobile money">{{money wefts.khahc}}</td>
        <td class="not-mobile money">{{money wefts.gaa}}</td>
        <td class="not-mobile money">{{money wefts.coaa}}</td>
        <td class="not-mobile money">{{money wefts.ct}}</td>
        <td class="not-mobile money">{{money wefts.worldwide}}</td>
        <td class="money">{{money wefts.total}}</td>
        <td class="actions">
          <button class="view mobile-only" {{action "view" wefts}}>View</button>
          <button class="delete" {{action "remove" wefts}}>Delete</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{#if viewItem}}
  {{#modal-dialog hasOverlay=true translucentOverlay=true onClickOverlay=(action toggleProperty "viewItem")}}
    {{wefts-form model=viewItem class="popup-content" title="WEFTS Details"}}
  {{/modal-dialog}}
{{/if}}
